<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <io.sule.gaugelibrary.GaugeView
            android:id="@+id/gauge_view1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:showOuterShadow="false"
            app:showOuterBorder="false"
            app:showOuterRim="false"
            app:showInnerRim="false"
            app:showNeedle="true"
            app:showScale="true"
            app:showRanges="true"
            app:showText="false"
            app:outerShadowWidth="0"
            app:outerBorderWidth="0"
            app:outerRimWidth="0"
            app:innerRimWidth="0"
            app:innerRimBorderWidth="0"
            app:innerCircleColor="#ccc"
            app:outerCircleColor="#ccc"
            app:textValue="%" />
        <TextView
            android:text="@+string/settings_caption_bluetooth_enable"
            android:id="@+id/textViewCaptionBtEnable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioButtonAskForBtEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_ask_for_bt_enable" />
            <RadioButton
                android:id="@+id/radioButtonAlwaysEnableBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_always_enable_bt" />
            <RadioButton
                android:id="@+id/radioButtonNoBtHandling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_no_bt_handling" />
        </RadioGroup>
        <TextView
            android:text="@+string/settings_caption_bluetooth_disable"
            android:id="@+id/textViewCaptionBtDisable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <CheckBox
            android:id="@+id/checkBoxDisableBtAtExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_disable_bt_at_exit" />
        <TextView
            android:text="@+string/settings_caption_lock_communication"
            android:id="@+id/textViewCaptionLockComm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioButtonCommLockNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_lock_none" />
            <RadioButton
                android:id="@+id/radioButtonCommLockCpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_lock_cpu" />
            <RadioButton
                android:id="@+id/radioButtonCommLockDim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_lock_dim" />
            <RadioButton
                android:id="@+id/radioButtonCommLockBright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_lock_bright" />
        </RadioGroup>
        <TextView
            android:text="@+string/settings_caption_lock_logging"
            android:id="@+id/textViewCaptionLockLogging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioButtonLogLockNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_lock_none" />
            <RadioButton
                android:id="@+id/radioButtonLogLockCpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_lock_cpu" />
            <RadioButton
                android:id="@+id/radioButtonLogLockDim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_lock_dim" />
            <RadioButton
                android:id="@+id/radioButtonLogLockBright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_lock_bright" />
        </RadioGroup>
        <TextView
            android:text="@+string/settings_caption_logfiles"
            android:id="@+id/textViewCaptionLogfiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <CheckBox
            android:id="@+id/checkBoxStoreDataLogSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_store_data_log_settings" />
        <TextView
            android:text="@+string/settings_caption_app_start"
            android:id="@+id/textViewCaptionAppStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioButtonStartOffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_start_offline" />
            <RadioButton
                android:id="@+id/radioButtonStartConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_start_connect" />
            <RadioButton
                android:id="@+id/radioButtonStartConnectClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_start_connect_close" />
        </RadioGroup>
        <TextView
            android:text="@+string/settings_caption_app_exit"
            android:id="@+id/textViewCaptionAppExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <CheckBox
            android:id="@+id/checkBoxDoubleClickForAppExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_double_click_for_app_exit" />
        <TextView
            android:text="@+string/settings_caption_broadcast"
            android:id="@+id/textViewCaptionBroadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <CheckBox
            android:id="@+id/checkBoxSendDataBroadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_send_data_broadcast" />
        <TextView
            android:text="@+string/settings_caption_cpu_usage"
            android:id="@+id/textViewCaptionCpuUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <CheckBox
            android:id="@+id/checkBoxCheckCpuUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_check_cpu_usage" />
        <TextView
            android:text="@+string/settings_caption_check_ecu_files"
            android:id="@+id/textViewCaptionCheckEcuFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <CheckBox
            android:id="@+id/checkBoxCheckEcuFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_check_ecu_files" />
        <TextView
            android:text="@+string/settings_caption_old_vag_mode"
            android:id="@+id/textViewCaptionOldVagMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <CheckBox
            android:id="@+id/checkBoxOldVagMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_old_vag_mode" />
        <TextView
            android:text="@+string/settings_caption_storage"
            android:id="@+id/textViewCaptionStorage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <Button
            android:id="@+id/buttonStorageLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@+string/settings_caption_debug"
            android:id="@+id/textViewCaptionDebug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:textColor="#fff" />
        <CheckBox
            android:id="@+id/checkBoxCollectDebugInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_collect_debug_info" />
        <CheckBox
            android:id="@+id/checkBoxHciSnoopLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonHciSnoopLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_hci_snoop_log_config" />
    </LinearLayout>
</ScrollView>